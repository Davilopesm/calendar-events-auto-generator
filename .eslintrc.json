{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "semi": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/no-misused-promises": "off",
    "no-useless-catch": "warn"
  }
}